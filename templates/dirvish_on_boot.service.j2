[Unit]
Description="create dirvish backups when booting the system"
ConditionFileIsExecutable=/usr/local/bin/dirvish_backup_on_boot_or_shutdown.sh
Requires=basic.target
After=basic.target
Before=display-manager.service systemd-user-sessions.service

[Service]
Type=oneshot
ExecStart=/usr/local/bin/dirvish_backup_on_boot_or_shutdown.sh
TimeoutSec=0
RemainAfterExit=yes
StandardOutput=tty

[Install]
WantedBy=multi-user.target
